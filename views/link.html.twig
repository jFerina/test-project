{% extends "layout.html.twig" %}

{% block content %}
<div class="row">
<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    {% if warning is not empty %}
        <div class="alert alert-warning" role="alert">{{ warning }}</div>
    {% endif %}
    <form method="post" id="link-form">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title">
        </div>
        <div class="form-group">
            <label for="url">URL</label>
            <input type="text" class="form-control" id="url" name="url" placeholder="URL">
        </div>
        <div class="form-group">
            <label for="text">Text</label>
            <textarea class="form-control" id="userText" name="userText" form="link-form" placeholder="Text to be Linked"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <div class="form-group" style="display:none; float:right; margin-right: 10%;" id="dual-create-btn-div">
            <label for="radio">Create Both Links</label>
            <br>
            <input type="radio" id="dbl-link-btn" name='dbl-link-btn' form="link-form">
        </div>
    </form>
</div>
</div>
{% endblock content %}
